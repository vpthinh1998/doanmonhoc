@using ThuongMaiDienTu.Helper;

@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int id = (int)ViewBag.Id;
}
<link href="~/Content/product.css" rel="stylesheet" />
<br />
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="~/img/product/banner.png" style="width: 100%" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/product/iphone-banner2.png" style="width: 100%" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="~/img/product/oppo-banner.png" style="width: 100%" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row">

        <div class="w-100 d-none d-md-block"></div>

        <div class="col-main">
            <h1>Điện Thoại</h1>
            <div class="tab-group">
                <div class="mt-tabs">
                    @using (THUONGMAIDIENTUEntities db = new THUONGMAIDIENTUEntities())
                    {

                        foreach (var category in db.CATEGORY_PRODUCT.ToList())
                        {
                            string link = "/dtdd/" + RemoveVietnamese.RemoveSign4VietnameseString(category.CategoryName).Replace(" ", "-") + "-" + category.IdCategory;
                            <a href="@link" class="menu-con"><i class="@category.CategoryIcon fa-1.5x"></i> @category.CategoryName </a>

                        }
                    }
                </div>
            </div>

            <br />

            <hr />

            <div class="w-100 d-none d-md-block"></div>

            <div class="row">
                <div class="col-10">
                    <div class="left" style="margin-right: 5px;">
                        <ul class="price-filter-link">
                            <li>
                                <strong>Chọn mức giá:</strong>
                            </li>
                            <li>
                                <a href="#">5 - 10 triệu</a>
                            </li>
                            <li>
                                <a href="#">Trên 10 triệu</a>
                            </li>
                            <li>
                                <a href="#">10 - 15 triệu</a>
                            </li>
                            <li>
                                <a href="#">Trên 20 triệu</a>

                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-2">
                    <div class="right" style="margin-bottom: 10px;">

                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Sắp xếp
                            </button>
                            <div class="dropdown-menu">
                                @*<a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Separated link</a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-100 d-none d-md-block"></div>

            <div class="row">
                @using (THUONGMAIDIENTUEntities db = new THUONGMAIDIENTUEntities())
                {
                    foreach (var product in db.PRODUCTs.Where(x => x.IdCategory == id).ToList())
                    {
                        try
                        {
                            string link = "/" + RemoveVietnamese.RemoveSign4VietnameseString(@product.ProductName).Replace(" ", "-") + "-" + product.IdProduct;
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <a href="@link" class="text-center"><img class="card-img-top product_img" style="height: 220px" src="~/img/product/@product.PRODUCT_IMG.FirstOrDefault().Filename" alt="@product.PRODUCT_IMG.FirstOrDefault().ImgAlt"></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="@link">@product.ProductName</a>
                                        </h4>
                                        <h5 class="product_price">@String.Format("{0:0,0}", product.ProductPrice) VNĐ</h5>
                                        <p class="card-text product_sumary">
                                            @product.ProductSumary
                                        </p>
                                    </div>
                                    
                                </div>
                            </div>
                        }
                        catch (Exception ex)
                        {

                        }
                    }
                }
            </div>

        </div>
    </div>
</div>


