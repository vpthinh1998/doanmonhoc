@using ThuongMaiDienTu.Helper;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- /.col-lg-3 -->
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <h2 class="my-4">Danh Mục</h2>
            <div class="list-group">
                @using (THUONGMAIDIENTUEntities db = new THUONGMAIDIENTUEntities())
                {
                    foreach (var category in db.CATEGORY_PRODUCT.ToList())
                    {
                         string link = "/dtdd/" + RemoveVietnamese.RemoveSign4VietnameseString(category.CategoryName).Replace(" ", "-") + "-" + category.IdCategory;
                        <a href="@link" class="list-group-item"><i class="@category.CategoryIcon fa-1.5x"></i> @category.CategoryName </a>
                    }
                }
            </div>
        </div>
        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/img/product/banner.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/product/iphone-banner2.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/img/product/oppo-banner.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!--main-->

            <div class="row">

                @using (THUONGMAIDIENTUEntities db = new THUONGMAIDIENTUEntities())
                {
                    foreach (var product in db.PRODUCTs.ToList())
                    {
                        try
                        {
                            string link = "/" + RemoveVietnamese.RemoveSign4VietnameseString(@product.ProductName).Replace(" ", "-") + "-" + product.IdProduct;
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <a href="@link" class="text-center"><img class="card-img-top product_img" style="height: 220px" src="~/img/product/@product.PRODUCT_IMG.FirstOrDefault().Filename" alt="@product.PRODUCT_IMG.FirstOrDefault().ImgAlt"></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="@link">@product.ProductName</a>
                                        </h4>
                                        <h5 class="product_price">@String.Format("{0:0,0}", product.ProductPrice) VNĐ</h5>
                                        <p class="card-text product_sumary">
                                            @product.ProductSumary
                                        </p>
                                    </div>
                                   
                                </div>
                            </div>
                        }
                        catch (Exception ex)
                        {

                        }

                    }
                }




            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->


    </div>
    <!-- /.row -->

</div>